                {_text: 'Новости', _link: '/news', _isCurrent: false},
                {_text: 'Соглашения', _link: '/agreements', _isCurrent: false, _sublinks: [
                    {_textLink: 'agreements1', _link: '/agreements/1'},
                    {_textLink: 'agreements2', _link: '/agreements/2'},
                    {_textLink: 'agreements3', _link: '/agreements/3'},
