extends ../website-pages-template

block variables
  -
    const bgcolor = '#FFFFFF'
    const title = 'Room details'

block template
  include ../../../blocks/icon-text-list/icon-text-list.pug
  include ../../../blocks/comment/comment.pug
  include ../../../blocks/bullet-list/bullet-list.pug
  include ../../../blocks/room-price/room-price.pug 
  include ../../../blocks/donut-chart/donut-chart.pug

  -
    const { 
      infoData, 
      feelingDescriptionsData, 
      commentsData, 
      rules, 
      priceData 
    } = require('@pages/website-pages/room-details/room-details-data.json')

  main.room-details
    figure.room-details__wrapper-pic
      .room-details__pic-main
        img(src="./img/mainpic.png" alt="room view").room-details__pic-main-img
        .room-details__pic-right
          img(src="./img/rtop.png" alt="room view").room-details__pic-right-img
          img(src="./img/rbot.png" alt="room view").room-details__pic-right-img
    .room-details__wrapper-main
      .room-details__main
        .room-details__datails
            .room-details__wrapper-info
              article.room-details__info
                h2.room-details__info-header.h2="Сведения о номере"
                +icon-text-list(infoData)
              article.room-details__feeling
                h2.room-details__feeling-header.h2="Впечатления от номера"
                .room-details__wrapper-feeling
                  .room-details__feeling-chart
                    +donut-chart()
                  .room-details__feeling-descriptions  
                    +bullet-list(feelingDescriptionsData)
            article.room-details__wrapper-comments
              .room-details__wrapper-comments-header
                h2.room-details__comments-header.h2="Отзывы посетителей номера"
                .room-details__comments-total="2 отзыва"
              each comment in commentsData
                .room-details__comments
                  +comment(comment)              
            .room-details__wrapper-rulles
              article.room-details__rulles
                h2.room-details__rulles-header.h2="Правила"
                +bullet-list(rules)
              article.room-details__cancel
                h2.room-details__cancel-header.h2="Отмена"
                .room-details__cancel-text.body="Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги."
        .room-details__price
          +room-price(priceData)