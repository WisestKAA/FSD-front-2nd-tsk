extends ../ui-kit-template

block variables
  -
    const title = 'Headers and footers'
    const description = 'Headers and footers used on pages'

block template
  include ../../../blocks/header/header.pug
  include ../../../blocks/footer/footer.pug

  -
    const {
      unloggedHeaderData,
      loggedHeaderData,
      footerData,
      mobileFooterData
    } = require('@pages/ui-kit/headers-and-footers/headers-and-footers-data.json')

  .headers-and-footers
    .headers-and-footers__header
      +header(unloggedHeaderData)
    .headers-and-footers__header
      +header(loggedHeaderData)
    .headers-and-footers__footer
      +footer(footerData)
    .headers-and-footers__mobile-footer
      +footer(mobileFooterData)
