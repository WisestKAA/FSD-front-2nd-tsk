include ../material-icons/material-icons.pug
include ../dropdown-option/dropdown-option.pug
include ../dropdown-option-button/dropdown-option-button.pug

mixin dropdown({ text, options=[], isShort=false, isDarkArrow=false } = {})
  - const short = isShort && 'dropdown_width-short js-dropdown_width-short'  
  - const darkArrow = isDarkArrow && 'dropdown__arrow_dark'
  
  section.dropdown.js-dropdown(class=short)
    .dropdown__wrapper
      .dropdown__arrow(class=darkArrow)
        +material-icons({type: 'keyboard_arrow_down'})
      .dropdown__select.js-dropdown__select
        span.dropdown__text.js-dropdown__text=text
      .dropdown__options.js-dropdown__options
        each option in options
          - const {text, number} = option
          +dropdown-option({text, number})
        if (!isShort)
          +dropdown-option-button({ dropText: 'очистить', applyText: 'применить' })