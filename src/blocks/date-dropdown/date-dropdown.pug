include ../material-icons/material-icons.pug

mixin date-dropdown ({ isFiltred=true, demoText, startText, finishText } = {})
  -
    const attrEmptyInput = {}
    attrEmptyInput.type = 'text'
    attrEmptyInput.readonly = true
    attrEmptyInput.placeholder = 'ДД.МММ - ДД.МММ'

    const attrWithDemoInput = {}
    attrWithDemoInput.type = 'text'
    attrWithDemoInput.readonly = true
    attrWithDemoInput.placeholder = 'ДД.МММ - ДД.МММ'
    attrWithDemoInput.value = demoText
  
  section.date-dropdown.js-date-dropdown
    if (isFiltred)    
      .date-dropdown__arrow
        +material-icons({type: 'keyboard_arrow_down'})
      input&attributes(attrEmptyInput).date-dropdown__input.date-dropdown__input-filtred.js-date-dropdown__input.js-date-dropdown__input-filtred
    else
      .date-dropdown__wrapper-filtred
        .date-dropdown__wrapper-from
          h3.date-dropdown__start-text.h3=startText
          .date-dropdown__input-wrapper
            .date-dropdown__arrow
              +material-icons({type: 'keyboard_arrow_down'})
            input&attributes(attrEmptyInput).date-dropdown__input.js-date-dropdown__input.date-dropdown__input-from.js-date-dropdown__input-from
        .date-dropdown__wrapper-to
          h3.date-dropdown__finish-text.h3=finishText
          .date-dropdown__input-wrapper
            .date-dropdown__arrow
              +material-icons({type: 'keyboard_arrow_down'})
            input&attributes(attrWithDemoInput).date-dropdown__input-to.js-date-dropdown__input-to