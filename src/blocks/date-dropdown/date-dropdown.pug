include ../material-icons/material-icons.pug

mixin date-dropdown ({ isFiltered=true, startText, finishText } = {})
  -
    const attrInput = {
      type: 'text',
      readonly: true,
      placeholder: isFiltered ? 'ДД.МММ - ДД.МММ' : 'ДД.ММ.ГГГГ',
    }
    
  section.date-dropdown.js-date-dropdown
    if (isFiltered)    
      .date-dropdown__arrow
        +material-icons({type: 'keyboard_arrow_down'})
      input&attributes(attrInput).date-dropdown__input-filtered.js-date-dropdown__input.js-date-dropdown__input-filtered
    else
      .date-dropdown__wrapper-filtered
        .date-dropdown__wrapper-from
          h3.date-dropdown__start-text=startText
          .date-dropdown__input-wrapper
            .date-dropdown__arrow
              +material-icons({type: 'keyboard_arrow_down'})
            input&attributes(attrInput).date-dropdown__input-from.js-date-dropdown__input.js-date-dropdown__input-from
        .date-dropdown__wrapper-to
          h3.date-dropdown__finish-text=finishText
          .date-dropdown__input-wrapper
            .date-dropdown__arrow
              +material-icons({type: 'keyboard_arrow_down'})
            input&attributes(attrInput).date-dropdown__input-to.js-date-dropdown__input-to