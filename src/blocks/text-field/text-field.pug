mixin text-field({ placeholder, name, isMasked = false, isPaddingRightMode = false, text, type = 'text'}={})

  - var maskedMod = '';
  if (isMasked)  
    - maskedMod = ' text-field_masked'
    - placeholder = 'ДД.ММ.ГГГГ'
  
  - var addPadding = '';
  if (isPaddingRightMode)
    - addPadding = ' text-field_addPaddingRight'    
  
  input.js-text-field(
    type=type 
    placeholder=placeholder 
    name=name 
    class=`text-field${maskedMod}${addPadding}`
    value=text
  )