include ../checkbox-button/checkbox-button.pug

mixin expandable-checkbox-list({ header, checkboxes =[], isExpanded=false } = {})
  -
    const displayClass = isExpanded && 'expandable-checkbox-list__checkboxes_display'
    const arrow = isExpanded ? 'keyboard_arrow_up' : 'keyboard_arrow_down'

  section.expandable-checkbox-list.js-expandable-checkbox-list
    .expandable-checkbox-list__arrow.js-expandable-checkbox-list__arrow
      +material-icons({type: arrow})
    h3.expandable-checkbox-list__header.js-expandable-checkbox-list__header=header
    .expandable-checkbox-list__checkboxes.js-expandable-checkbox-list__checkboxes(class=displayClass)
      each checkbox in checkboxes
        .expandable-checkbox-list__item
          +checkbox-button(checkbox)
