include ../material-icons/material-icons.pug

mixin pagination ({firstPage = 1, lastPage = 15, _links = []}={})
    .pagination
        ul.pagination__container
            each link in _links
                - const { href, isActive, number, } = link
                if href.length === 0
                    li.pagination__item
                        .pagination__ellipsis ...
                else
                    li.pagination__item(class = isActive ? 'pagination__item_active': null)
                        a.pagination__link(href=href, class = isActive ? 'pagination__link_active' : null)=number
            li.pagination__next
                a.pagination__link_next(href='/to-do')
                    +material-icons({_type: 'arrow_forward'})
        .pagination__caption='1 – 12 из 100+ вариантов аренды'
